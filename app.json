{
  "expo": {
    "name": "Our Edu App Test",
    "slug": "react-native-app",
    "owner": "abdelrahmankamel",

    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/AppIcon.png",

    "splash": {
      "image": "./src/assets/images/AppIcon.png",
      "backgroundColor": "#000000",
      "resizeMode": "contain"
    },

    "plugins": [
      "expo-localization",
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 28,
            "targetSdkVersion": 35,
            "compileSdkVersion": 35
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ]
    ],

    "android": {
      "package": "com.abdelrahmankamel.reactnativeapp",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/AppIcon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["CAMERA", "ACCESS_FINE_LOCATION"],
      "blockedPermissions": ["ACCESS_BACKGROUND_LOCATION"],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "ouredu.onrender.com",
              "pathPrefix": "/"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "userInterfaceStyle": "dark",
      "softwareKeyboardLayoutMode": "pan"
    },

    "ios": {
      "bundleIdentifier": "com.abdelrahmankamel.reactnativeapp",
      "buildNumber": "1.0.0",
      "supportsTablet": false,
      "userInterfaceStyle": "automatic",
      "infoPlist": {
        "NSCameraUsageDescription": "We need camera access to upload your profile photo.",
        "NSPhotoLibraryUsageDescription": "We need photo library access to select images.",
        "NSLocationWhenInUseUsageDescription": "We use your location to improve your experience."
      }
    },

    "extra": {
      "eas": {
        "projectId": "cb818bcf-8c62-4d65-a93b-1ac5f67347e9"
      }
    }
  }
}
